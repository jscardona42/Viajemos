{% extends 'base.html.twig' %}

{% block title %}Editoriales{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Nueva editorial</h3>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('creareditoriales') }}" method="POST">
                            <div class="form-group mt-2">
                                <input type="text" name="nombre" id="nombre" class="form-control"
                                    placeholder="Nombre editorial" required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="sede" id="sede" class="form-control" placeholder="Sede"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <button type="button" class="btn btn-success" id="btnGuardar">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Listado de editoriales</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Sede</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for editorial in editoriales %}
                                <tr>
                                    <td>{{ editorial.nombre }}</td>
                                    <td>{{ editorial.sede }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
    var creareditoriales = "{{ path('creareditoriales') }}";
    var editoriales = "{{ path('editoriales') }}";
</script>
<script src="{{ asset('js/index.js') }}" type="text/javascript"></script>
{% endblock %}